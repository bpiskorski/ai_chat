pipeline {
    agent any
    stages {
        stage('build image') {
            steps {
                sh 'docker build -t ai_agent .'
            }
        }
        stage('run container') {
            steps {
                sh 'docker run -d -p 5001:5001 ai_agent'
            }
        }
        stage('send test message') {
            steps {
                sh '''
                   curl -X POST http://localhost:5001 -H "Content-Type: application/json" -d '{"message": "hi"}'
                '''
            }
        }
    }
}